{
  "layer":"top",
  "margin-top":2,
  "postion":"top",
  "reload_on_style_change":true,
  "modules-left": ["custom/exit","clock","hyprland/window"],
  "modules-center":["hyprland/workspaces"],
  "modules-right":["privacy","bluetooth","network","tray","wireplumber","custom/notific"],
  "hyprland/workspaces":{
    "persistent-workspaces":{
      "*":[1,2,3,4,5]
    }
  },
  "clock": {
    "format":"{:%I:%M:%S %p}",
    "format-alt":"{:%D}",
    "interval": 1
  },
  "network":{
    "format-wifi": "Ôá´",
    "format-ethernet":"Óºâ",
    "format-disconnected": "Ó¨Å",
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} üñß ",
  },
  "bluetooth":{
    "format-on": "Û∞ÇØ",
    "format-off": "BT-off",
    "format-disabled": "Û∞Ç≤",
    "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
    "format-alt": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
    "on-click": "overskride",
  },
  "wireplumber":{
    "on-click":"pwvucontrol",
  },
  "tray": {
    "icon-size": 14,
    "spacing": 10,
    "show-passive-items": true
  },
  "custom/exit":{
    "format":"Û∞£á",
    "icon-size": 32,
    "on-click":"wlogout -b 6"
  },
  "hyprland/window":{
    "format": "{class}",
    "icon": true,
    "icon-size": 18
  },
  "privacy":{
    "icon-size": 18,
  },
  "custom/notific":{
    "exec":"~/.config/waybar/scripts/dunst.sh",
    "restart-interval":1,
    "on-click":"dunstctl history-clear"
  }

}
